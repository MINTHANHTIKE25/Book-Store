<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/onBoarding_img"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/on_boarding_img"/>
    <!-- Indicator  !-->
    <View
        android:id="@+id/indicator_one"
        android:layout_below="@id/onBoarding_img"
        android:background="@drawable/inactive_indicator"
        android:layout_marginVertical="20dp"
        android:layout_toStartOf="@id/indicator_two"
        android:layout_width="14dp"
        android:layout_height="6dp"/>
    <View
        android:layout_marginHorizontal="10dp"
        android:id="@+id/indicator_two"
        android:background="@drawable/inactive_indicator"
        android:layout_alignTop="@id/indicator_one"
        android:layout_centerHorizontal="true"
        android:layout_width="14dp"
        android:layout_height="6dp"/>
    <View
        android:id="@+id/indicator_three"
        android:background="@drawable/inactive_indicator"
        android:layout_alignTop="@id/indicator_two"
        android:layout_toEndOf="@id/indicator_two"
        android:layout_width="14dp"
        android:layout_height="6dp"/>

    <TextView
        android:id="@+id/on_boarding_title_txt"
        android:layout_below="@id/indicator_one"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="50dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Read your favourite books"
        android:fontFamily="@font/poppins_bold"
        android:textSize="18sp"
        android:textColor="@color/black_100"/>

    <TextView
        android:id="@+id/on_boarding_txt"
        android:layout_below="@id/on_boarding_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="50dp"
        android:fontFamily="@font/poppins_medium"
        android:text="All your favourites book in one place, read any book, staying at home, on travelling, or anywhere else"
        android:textAlignment="center"
        android:textStyle="normal" />
</RelativeLayout>